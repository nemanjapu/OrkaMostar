<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="AddNewWebsitePage" aria-hidden="true" id="AddNewWebsitePage">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add new page</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xl-12 mb-4">
                        <form id="addWebsitePageForm">
                            <input type="hidden" name="newPageMenuId" id="newPageMenuId" value="" />
                            <div class="form-group">
                                <label for="newPageMenuName">Menu Name</label>
                                <input type="text" name="newPageMenuName" id="newPageMenuName" value="" class="form-control required" data-rule-required="true" />
                            </div>
                            <div class="form-group">
                                <label for="newPageTitle">Page Title</label>
                                <input type="text" name="newPageTitle" id="newPageTitle" value="" class="form-control required" data-rule-required="true" />
                            </div>
                            <div class="form-group">
                                <label for="newPageTitle">Page Template</label>
                                <select name="newPageTemplate" id="newPageTemplate" class="form-control required" data-rule-required="true">
                                    <option value="">Please Select</option>
                                    <option value="Homepage">Homepage</option>
                                    <option value="OnlyTextTemplate">Blank Page</option>
                                    <option value="BlogTemplate">Blog Page</option>
                                    <option value="ContactTemplate">Contact Page</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="newPageParent">Parent</label>
                                <select name="newPageParent" id="newPageParent" class="form-control required" data-rule-required="true">
                                    <option value="0" selected>No Parent</option>
                                </select>
                            </div>
                            <div class="pt-3">
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>